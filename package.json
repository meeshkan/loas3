{
  "name": "loai3",
  "version": "0.0.0",
  "description": "OpenAPI 3.0.0 for lazy people",
  "main": "dist/src/index.js",
  "repository": "https://github.com/unmock/loai3",
  "author": "Mike Solomon",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^24.0.14",
    "@types/js-yaml": "^3.12.1",
    "codecov": "^3.5.0",
    "jest": "^24.8.0",
    "jest-junit": "^6.4.0",
    "js-yaml": "^3.13.1",
    "prettier": "^1.18.2",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.2"
  },
  "dependencies": {
    "io-ts": "^1.9.0"
  },
  "scripts": {
    "compile": "tsc --outDir dist",
    "lint:fix": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
    "test": "yarn compile && jest",
    "prepublish": "yarn compile && yarn lint && yarn test",
    "test:ci": "yarn run coverage --ci --maxWorkers=2  --reporters=default --reporters=jest-junit",
    "coverage": "yarn test --coverage",
    "coverage:upload": "codecov"
  }
}
